@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">All Roles</h1>

<a asp-action="Create" class="btn btn-info mt-5 ">
    Create new Role
</a>
<div class="row justify-content-center align-items-center mt-4">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="name" placeholder="Search By Name" />

        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />

        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <div class=" mt-2 w-100 p-0 m-0 ">
        <div class="row p-0 m-0">
            <div class="col-md-12 row justify-content-center align-items-center p-0 m-0">
                <table class="table table-bordered col-lg-12  text-center">
                    <thead>
                        <tr>
                            <td>@Html.DisplayNameFor(R=>R.Id)</td>
                            <td>@Html.DisplayNameFor(R=>R.RoleName)</td>


                            <td>Details</td>
                            <td>Update</td>
                            <td>Delete</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Role in Model)
                        {
                            <tr>

                                <td>@Html.DisplayFor(M=>Role.Id)</td>
                                <td>@Html.DisplayFor(M=>Role.RoleName)</td>


                                <partial name="_buttonPartialView" model="@Role.Id">
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
 
}
else
{
    <div class="mt-4 alert alert-warning text-center">
        <h3>
            there is No Roles OOPS
        </h3>
    </div>
}


