@model List<RoleUserViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    var RoleId = ViewBag.RoleId;
}

<h1>Add Or Remove Users</h1>
<form class="my-2" asp-action="AddOrRemoveUsers" asp-route-RoleId="@RoleId">
 @for(var i=0;i<Model.Count;i++)

    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected"/>
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
        </div>
        <input type="hidden" asp-for="@Model[i].UserId"/>
        <input type="hidden" asp-for="@Model[i].UserName" />

    }
    <div class="my-2">
        <input type="submit" value="Edit" class="btn btn-success" />
        <a asp-action="Edit" asp-controller="Role" asp-route-id="@RoleId"
           class="btn btn-danger" >Cancel</a>
    </div>










</form>
