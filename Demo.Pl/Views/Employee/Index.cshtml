@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "All Employee";
   // string VdataMessage = ViewData["Message"] as string;
   // string VBagMessage = ViewBag["Message"] ;
}

@if (TempData["Message"] is not null)
{
    <div class="alert alert-primary mt-3">
        @TempData["Message"]
    </div>
}
@* <div class="alert alert-success"> 
    @ViewBag.Message
</div> *@
<h1 class="text-center">All Employee</h1>


<a asp-action="Create" class="btn btn-info mt-5 ">
    Create new Employee
</a>
<div class="row justify-content-center align-items-center mt-4">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" id="searchBar" name="SearchValue" placeholder="Search By Name" />
@* <input type="text" class="form-control" name="SearchValue" placeholder="Search By Name" /> *@

        </div>
        <div class="col-4">
            <input type="submit" value="Search"class="btn btn-success" />

        </div>
    </form>
</div>

@if (Model.Count() > 0)
{

    <div class=" mt-2 w-100 p-0 m-0 ">
        <div class="row p-0 m-0">
            <div class="col-md-12 row justify-content-center align-items-center p-0 m-0">
                <table class="table table-bordered col-lg-12  text-center">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(D=>D.Name)</th>
                          
                          
                            <th>@Html.DisplayNameFor(D=>D.Image)</th>
                            <th>@Html.DisplayNameFor(D=>D.Departments)</th>
                           
                            
                           
                            
                            <th>Details</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>

                                <td>@employee.Name</td>
                           
                                <td>
                                    <img style="width:60px;height:60px"  src="~/Files/Images/@employee.ImageName" class="img-fluid rounded" alt="Employee Image" />

                                </td>

                                  <td>@Html.DisplayFor(M=>@employee.Departments.Name)</td>
                     
                      
                      



                        <partial name="_buttonPartialView" model="@employee.Id.ToString()">



                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  
}
else
{
    <div class="mt-4 alert alert-warning  text-center">
        <h3>
            there is No Employee OOPS
        </h3>
    </div>
}
