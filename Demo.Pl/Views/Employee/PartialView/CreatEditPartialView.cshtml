    <span asp-validation-for="HireDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label " asp-for="Departments"></label>
    <select class="form-control" asp-for="DepartmentsId" asp-items="@depart">
        <option value="@null" >___select Departments_____</option>
   </select>

</div>
<div class="form-group">
    <label class="col-form-label " >Image</label>
    <input class="form-control"  asp-for="Image"/>
